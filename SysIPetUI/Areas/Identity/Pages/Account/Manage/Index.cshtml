@page
@model IndexModel
@{
    ViewData["Title"] = "Configuração da sua conta no Sys iPet's";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">

    <div class="col-md-6">

        <form id="profile-form" method="post">

            <!-- Card Tipo Cliente/ Prestador -->
            <div class="card elevation-2">

                <!-- Título do Card -->
                <div class="card-header">

                    <h3 class="card-title">
                        <span class="brand-text font-weight-light">
                            <b class="text-gray"><i class="fas fa-tools"></i> @ViewData["Title"]</b>
                        </span>
                    </h3>

                </div>

                <!-- Corpo do Card -->
                <div class="card-body">

                    <div class="col-md-auto">                            

                        <!-- Username -->
                        <div class="form-group">
                                
                            <label class="control-label col-md-auto">
                                <span class="brand-text font-weight-light">
                                    <b class="text-gray">Username:</b>
                                </span>
                            </label>

                            <div class="col-md-auto">                                    
                                <input asp-for="Username" class="form-control" disabled />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>

                        </div>

                        <!-- Telefone -->
                        <div class="form-group">
                                
                            <label class="control-label col-md-auto">
                                <span class="brand-text font-weight-light">
                                    <b class="text-gray">Telefone de Recuperação de Conta:</b>
                                </span>
                            </label>

                            <div class="col-md-auto">                                    
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>

                        </div>

                        <!-- Completar o Cadastro -->
                        <div class="form-group">  
                                    
                            <label class="control-label col-md-auto">
                                <span class="brand-text font-weight-light">
                                    <b class="text-red">*</b>
                                    <b class="text-gray">Complete o Cadastro para Agendar um Serviço:</b>
                                </span>
                            </label>

                            @*<div class="col-md-auto">
                                <a asp-controller="Cliente" asp-action="CreateCliente">Clique aqui</a>
                            </div>*@
                            
                            <button type="button"
                                    class="btn btn-tool"
                                    data-toggle="ajax-modal"
                                    data-target="#modalIncluirCadastroCliente"
                                    data-url="@Url.Action("CreateCliente", "Cliente")">
                                    <i class="btn-tool fas fa-edit" title="Completar Cadastro"></i>
                            </button>

                        </div>

                        <div class="form-group">

                            <div class="col-md-auto float-right">
                                <a asp-controller="Cliente" asp-action="Index">Ver meu Cadastro</a>
                            </div>
                            
                        </div>

                    </div>

                </div>

                <div class="card-footer">
                    <button id="update-profile-button" type="submit" class="btn btn-success float-right">Save</button>
                </div>

            </div>

        </form>

    </div>

</div>

<!-- Incluir Cadastro -->
<div id="modalIncluirCadastroCliente" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-keyboard="false" data-backdrop="static">

    <div class="modal-dialog" role="document">

        <!-- Partial View Load Dynamically -->
        <div id="conteudoModal" class="modal-content">
        </div>

    </div>

</div>

<!-- Editar Cadastro -->
<div id="modalEditarCadastroCliente" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-keyboard="false" data-backdrop="static">

    <div class="modal-dialog" role="document">

        <!-- Partial View Load Dynamically -->
        <div id="conteudoModal" class="modal-content">
        </div>

    </div>

</div>

<!-- Excluir Cadastro -->
<div id="modalExcluirCadastroCliente" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-keyboard="false" data-backdrop="static">

    <div class="modal-dialog" role="document">

        <!-- Partial View Load Dynamically -->
        <div id="conteudoModal" class="modal-content">
        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
