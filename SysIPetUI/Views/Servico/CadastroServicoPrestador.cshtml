@*@model IEnumerable<SysIPetUI.Models.ServicosViewModel>*@
@model SysIPetUI.Models.ServicoViewModel

@{
    ViewData["Title"] = "Escolha abaixo quais Serviços estarão Disponíveis aos Clientes:";
}

<div class="wrapper">

    <div class="content-wrapper">

        <!-- Cabeçalho do Conteúdo da Página -->
        <div class="content-header">

            <div class="container-fluid">

                <!-- Conteúdo da Página -->
                <!-- Main content -->
                <section class="content">

                    <div class="container-fluid">

                        <!--Main Row-->
                        <div class="row">

                            <!-- Divisão da Pág Lado Esquerdo -->
                            <section class="col-lg-7 connectedSortable">

                                <div class="card">

                                    <div class="card-header border-0">

                                        <h3 class="card-title">

                                            <span class="brand-text font-weight-light">
                                                <b class="text-gray"><i class="fas fa-tools"></i> @ViewData["Title"]</b>
                                            </span>

                                        </h3>                                        

                                    </div>

                                    <div class="card-body">

                                        <form asp-action="CadastroServicoPrestador" class="form-group">

                                            <!--Validação-->
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                            <div class="row">

                                                <table class="table table-hover">

                                                    <thead>

                                                        <tr>
                                                            <th></th>
                                                            <th>Nome</th>
                                                            <th>Descrição</th>
                                                            <th>Preço R$</th>
                                                        </tr>

                                                    </thead>

                                                    <tbody class="todo-list" data-widget="todo-list">

                                                        @for (int i = 0; i < Model.ServicoList.Count; i++)
                                                        {
                                                            <tr>

                                                                <td title="Marque se deseja Prestar esse Serviço.">
                                                                    @Html.CheckBoxFor(model => model.ServicoList[i].Ativo)                                                                    
                                                                    @Html.HiddenFor(model => model.ServicoList[i].ServicoId)
                                                                    @Html.HiddenFor(model => model.ServicoList[i].PrestadorId)
                                                                </td>

                                                                <td>
                                                                    @Html.DisplayFor(model => model.ServicoList[i].Nome)
                                                                </td>

                                                                <td>
                                                                    @Html.DisplayFor(model => model.ServicoList[i].Descricao)
                                                                </td>

                                                                <td>
                                                                    @Html.EditorFor(model => model.ServicoList[i].Valor)                                                                    
                                                                </td>

                                                            </tr>
                                                        }

                                                    </tbody>

                                                </table>

                                            </div>                                                                                        

                                            <hr />
                                            <p>Você está prestes a Incluir os serviços de Prestador. Você Confirma a inclusão?</p>

                                            <div class="form-group justify-content-between text-right">

                                                @*<button id="buttonCancelarVisible" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                                <button id="buttonCancelarDisabled" style="display:none" type="button" class="btn btn-default disabled">Cancelar</button>*@
                                                <button id="buttonConfirmarVisible" type="submit" value="Create" class="btn btn-success">Confirmar</button>
                                                <button id="buttonConfirmarDisabled" style="display:none" type="button" class="btn btn-success disabled">Confirmar</button>

                                            </div>

                                            <!-- Gerenciar Conta -->
                                            <div class="col-md-auto text-left">
                                                <a asp-area="Identity" asp-page="/Account/Manage/Index"><p>Voltar para minha Conta</p></a>
                                            </div>

                                        </form>

                                    </div>

                                </div>

                            </section>

                        </div>

                    </div>

                </section>

            </div>

        </div>

    </div>

</div>


